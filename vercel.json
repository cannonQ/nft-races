{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "framework": "vite",
  "functions": {
    "api/**/*.ts": {
      "includeFiles": "{data/ergo/cyberpets/**,data/ergo/aneta-angels/**}"
    }
  },
  "rewrites": [
    { "source": "/((?!api/|@|src/|node_modules/).*)", "destination": "/index.html" }
  ]
}
